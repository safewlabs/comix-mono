<section data-controller="slider" class="-mt-12">
  <div class="items-slider">
    <div>
      <div class="lg:flex flex-row hero-gradient hidden max-w-screen-xl mx-auto mt-4">
        <div class="w-1/2">
          <img src="https://res.cloudinary.com/drg9hguhu/image/upload/v1707627808/Comix_1_dcdmkd.png" class="w-full h-full -l-lg" />
        </div>
        <div class="w-1/2 flex items-center justify-center text-justify flex flex-col p-6">
          <h1 class="text-4xl font-extrabold tracking-tight text-white">Support your favourite Indie creators.</h1>
          <p class="mt-6 text-xl text-indigo-100 max-w-3xl">Buy comics from Indie creators from across the globe through our marketplace, read them anywhere on our reader.</p>
          <%= link_to "Sign up & Read",
                      new_user_registration_path,
                      class: "mt-3 inline-block px-12 py-3 text-sm font-medium text-white bg-cx-bleached-cedar border border-cx-bleached-cedar active:text-cx-purple hover:bg-white hover:text-cx-purple hover:border-white focus:outline-none focus:ring",
                      data: {"umami-event": "Hero-Comics-Link-Click"}
          %>
        </div>
      </div>
    </div>
    <div>
      <div class="lg:flex flex-row hero-gradient hidden max-w-screen-xl mx-auto mt-4">
        <div class="w-1/2 flex justify-center text-justify flex flex-col p-6">
          <h1 class="text-4xl font-extrabold tracking-tight text-white">Read your purchased books on the go.</h1>
          <p class="mt-6 text-xl text-indigo-100 max-w-3xl">Our friendly mobile reader lets you access your library from anywhere on your iPhones and iPads.</p>
          <%= link_to "https://apps.apple.com/us/app/comix-one/id6566173476",
              target: "blank",
              data: {"umami-event": "App-Dowload-Link-Click"} do %>
            <%= image_tag "Download_on_the_App_Store_Badge_US-UK_RGB_blk_092917.svg", class: "py-2" %>
          <% end %>
        </div>
        <div class="w-1/2">
          <img max src="https://res.cloudinary.com/drg9hguhu/image/upload/v1738918757/mobile_lgbjvh.png" class="w-full h-full -l-lg max-h-[390px]" />
        </div>
      </div>
    </div>
    <div>
      <div class="lg:flex flex-row hero-gradient hidden max-w-screen-xl mx-auto mt-4">
        <div class="w-1/2">
          <img max src="https://res.cloudinary.com/drg9hguhu/image/upload/v1729255864/mobile_585_x_390_px_1_deus7l.png" class="w-full h-full -l-lg max-h-[390px]" />
        </div>
        <div class="w-1/2 flex items-center justify-center text-justify flex flex-col p-6">
          <h1 class="text-4xl font-extrabold tracking-tight text-white">Mark your calendars</h1>
          <p class="mt-6 text-xl text-indigo-100 max-w-3xl">Our first crowdfunding campaign is launching on our platform 31st of October 2024. Sign up for the pre-launch below.</p>
          <%= link_to "Sign up for Pre-launch",
                      "https://diebold.comix.one",
                      class: "mt-3 inline-block px-12 py-3 text-sm font-medium text-white bg-cx-bleached-cedar border border-cx-bleached-cedar active:text-cx-purple hover:bg-white hover:text-cx-purple hover:border-white focus:outline-none focus:ring",
                      data: {"umami-event": "Home-Crowdfunding-Link-Click"}
          %>
        </div>
      </div>
    </div>
  </div>
</section>