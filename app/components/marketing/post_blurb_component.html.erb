<div>
  <div>
    <div class="inline-block">
      <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-cx-purple text-purple-100">
        <%= @post.article_type %>
      </span>
    </div>
  </div>
  <%= link_to post_path(@post), data: { turbo: false }, class: "block mt-4" do %>
    <div class="text-xl font-semibold text-gray-900">
      <%= @post.title %>
    </div>
    <div class="mt-3 text-base text-gray-500">
      <%= @post.summary.html_safe %>
    </div>
  <% end %>
</div>
