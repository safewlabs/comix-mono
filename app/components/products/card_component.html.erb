<li id="<%= dom_id @product %>" class="py-4">
  <%= link_to product_path(@product), class: "group block", data: {"umami-event": "Product-Card-Product-Click", "umami-event-product": @product.name} do %>
    <%= product_image %>

    <div class="mt-1.5">
      <div class="flex justify-between -mt-12">
        <div class="p-2 bg-white w-fit text-center text-black ml-2 -mt-1">
          &#36; <%= @product.price %>
        </div>
      </div>
      <div class="mt-3 flex flex-start text-sm">
        <h3 class="text-gray-900 group-hover:underline group-hover:underline-offset-4">
          <%= @product.name %>
        </h3>
      </div>
      <%= link_to store_path(@product.store),
          class: "mt-2 flex flex-row items-center",
          data: { "umami-event": "Product-Card-Store-Click",
                  "umami-event-store": @product.store_name } do %>
          <span class="sr-only"> Store name </span>
          <span class="text-xs text-gray-500 hover:underline">
              <%= @product.store_name %>
          </span>
      <% end %>
    </div>
  <% end %>
</li>