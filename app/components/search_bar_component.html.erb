<%= form_with url: results_search_index_path, class: "w-full flex justify-start", method: :post do |form| %>
    <%= form.search_field :search_term,
                          value: params[:search_term],
                          oninput: "this.form.requestSubmit()",
                          class: "h-10 w-1/2 border border-grey-300 bg-white pe-10 ps-4 text-sm shadow-sm",
                          placeholder: "Search for Comics or Creators" %>
<% end %>
