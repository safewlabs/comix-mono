<div class="flex flex-col w-full">
  <div>
    <%- if controller_name != 'sessions' %>
      Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "h-4 w-4 text-cx-purple focus:ring-purple-800 border-gray-300 " %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      Don't have an account? <%= link_to "Sign up for a free account", new_registration_path(resource_name), class: "h-4 w-4 text-cx-purple focus:ring-purple-800 border-gray-300 " %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "h-4 w-4 text-cx-purple focus:ring-purple-800 border-gray-300 " %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "h-4 w-4 text-cx-purple focus:ring-purple-800 border-gray-300 " %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "h-4 w-4 text-cx-purple focus:ring-purple-800 border-gray-300 " %>
    <% end %>
  </div>
</div>
