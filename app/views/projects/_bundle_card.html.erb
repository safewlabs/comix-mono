<li class="my-1 px-1 w-full list-none cursor-pointer">
    <article class="overflow-hidden rounded-lg border hover:shadow-lg">
        <% if bundle.bundle_cover.present? %>
            <%= image_tag bundle.bundle_cover.variant(resize_to_limit: [600, 400]), class: "block max-h-tile w-full"  %>
        <% else %>
            <img src="https://img.icons8.com/dotty/200/000000/full-image.png" class="block h-auto p-16 mb-16" width="600" height="400"/>
        <% end %>

        <header class="flex items-center justify-between leading-tight p-2 md:p-4">
            <h1 class="text-lg text-left w-2/3"  title="<%= bundle.title %>">
                <%= bundle.title.truncate(15, omission: '..') %>
            </h1>
            <p class="text-grey-darker text-sm border border-dashed border-black rounded p-2 w-1/3 text-center">
                &#36; <%= bundle.pledge_amount %>
            </p>
        </header>
    </article>
</li>