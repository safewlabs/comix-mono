<div class="flex flex-wrap h-auto flex-wrap lg:mx-64 my-16">
  <div class="w-full lg:w-2/5">
    <%= render partial: "product_issue_cover", locals: {product: @product} %>
  </div>
  <div class="w-full lg:w-3/5 shadow-2xl rounded-lg mx-6 lg:mx-0 p-4 md:p-12">
    <%= render partial: "mobile_product_issue_cover", locals: {product: @product} %>
    <%= render partial: "product_details", locals: {product: @product} %>
  </div>
</div>
<% if @other_products.present? %>
  <%= render partial: "more_products", locals: {other_products: @other_products} %>
<% end %>