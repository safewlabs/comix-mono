<%= fields_for resource do |f| %>
  <%= render "devise/shared/error_messages" %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2", for: "email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= f.label :password, for: "password", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, for: "password_confirmation", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
    
  <div class="actions">
    <%= f.submit "Join", class: "inline-block px-4 py-2 leading-none border rounded text-cx-lavender-blush bg-cx-pumpkin hover:border-transparent hover:text-cx-pumpkin hover:bg-cx-lavender-blush hover:border-cx-pumpkin mt-4 lg:mt-0" %>
  </div>
<% end %>

