<%= render 'shared/hero_banner' %>
<%= render 'shared/search_bar' %>
<div class="text-center text-4xl">
  Genres
</div>
<div class="container my-12 mx-auto px-4 md:px-12">
    <div class="flex flex-wrap -mx-1 lg:-mx-4 ">
      <% cache @genres do %>
        <%= render partial: 'shared/genre_card', collection: @genres, as: :genre %>
      <% end %>
    </div>
</div>
<div class="text-center text-4xl">
  Categories
</div>
<div class="container my-12 mx-auto px-4 md:px-12">
    <div class="flex flex-wrap -mx-1 lg:-mx-4 ">
      <% cache @categories do %>
        <%= render partial: 'shared/category_card', collection: @categories, as: :category %>
      <% end %>
    </div>
</div>
<div class="container my-12 mx-auto px-4 md:px-12">
    <div class="flex flex-wrap -mx-1 lg:-mx-4 list-none">
      <% @products.each do |product| %>
        <%= render 'shared/product_card', product: product %>
      <% end %>
    </div>
</div>