<%= render(PageTitleComponent.new(title: @post.title)) %>
<% cache @post, expires_in: 60.seconds do %>
  <div class="flex flex-col items-center py-16 bg-white overflow-hidden">
    <div class="relative px-4 sm:px-6 lg:px-8">
      <div class="text-lg max-w-prose mx-auto">
        <h1>
          <span class="block text-base text-center text-cx-purple font-semibold tracking-wide uppercase"><%= @post.article_type %></span>
          <span class="mt-2 block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl"><%= @post.title %></span>
        </h1>
        <div class="mt-8 text-2xl text-gray-500 leading-8">
          <%= @post.summary.html_safe %>
        </div>
      </div>
      <div class="mt-6 prose prose-purple prose-lg text-black mx-auto">
        <%= @post.body.html_safe %><br/>
        <% if @post.youtube_video_id.present? %>
          <%= render(VideoComponent.new(video_url: @post.youtube_video_id)) %>
        <% end %>
        <%= render(Posts::AuthorComponent.new(@post.author)) %>
      </div>
    </div>
  </div>
<% end %>
